<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".DashBoard">

    <ImageView
        android:id="@+id/our_service_image"
        android:src="@drawable/our_services"
        android:layout_width="wrap_content"
        android:layout_height="150dp" />

<ScrollView
    android:layout_centerInParent="true"
    android:scrollbars="none"
    android:layout_below="@+id/our_service_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/linear_lay_1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        card_view:cardBackgroundColor="@color/off_color_orange"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mobile_app_deve"
            android:src="@drawable/mobile_application_develop2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

            <TextView

                android:textColor="@color/bg"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="@string/mob_develop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/off_color_orange"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="120dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/web_app_deve"
                        android:src="@drawable/web_app_deve2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/bg"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="@string/web_app_deve"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/linear_lay_2"
        android:layout_below="@+id/linear_lay_1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/off_color_orange"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="170dp"
                android:layout_height="120dp"
                card_view:cardCornerRadius="4dp"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/courses1"
                        android:src="@drawable/career2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/bg"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="@string/acp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/off_color_orange"
                android:id="@+id/courses"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="120dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/acp"
                        android:src="@drawable/courses2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textColor="@color/bg"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="@string/courses"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/linear_lay_4"
            android:layout_below="@+id/linear_lay_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view5"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/seminars"
                            android:src="@drawable/seminars2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/seminars"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/miniProject1"
                            android:src="@drawable/workshop2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/workshop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

     <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/linear_lay_3"
            android:layout_below="@+id/linear_lay_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view4"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/project"
                            android:src="@drawable/project2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/project"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/intership"
                            android:src="@drawable/internship2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/internship"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/linear_lay_5"
            android:layout_below="@+id/linear_lay_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view6"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/spokenEnglish"
                            android:src="@drawable/spokenenglish2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/spokenEnglish2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </LinearLayout>








                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/softSkills"
                            android:src="@drawable/softskill2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:text="@string/soft_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>


</LinearLayout>
</ScrollView>


</RelativeLayout>
